{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:\\Program File\\mingw\\bin\\g++.exe",
            "args": [
                //"-fdiagnostics-color=always",
